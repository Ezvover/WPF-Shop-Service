        <TextBox x:Name="SearchText" HorizontalAlignment="Left" Margin="619,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1" Height="20"/>
        <Button x:Name="SearchButton" Content="{DynamicResource SearchButton}" HorizontalAlignment="Left" Margin="627,167,0,0" VerticalAlignment="Top" Height="49" Width="104" Click="SearchButton_Click" Grid.Column="1"/>
        <TextBox x:Name="SearchText2" HorizontalAlignment="Left" Margin="619,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button Content="{DynamicResource SortButton}" HorizontalAlignment="Left" Margin="798,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.265,0.259" Click="Button_Click_1" Width="125" Height="48" Grid.Column="1"/>
