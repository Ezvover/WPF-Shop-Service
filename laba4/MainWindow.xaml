        <Label Content="{DynamicResource StartPrice}" HorizontalAlignment="Left" Margin="619,45,0,0" VerticalAlignment="Top" Grid.Column="1" Width="120"/>
        <Label Content="{DynamicResource EndPrice}" HorizontalAlignment="Left" Margin="619,99,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="SaveButton" Content="{DynamicResource SaveButton}"  HorizontalAlignment="Left" Margin="311,348,0,0" VerticalAlignment="Top" Width="132" Height="66" Click="SaveButton_Click" Grid.Column="1"/>
        <Button x:Name="UpdateButton" Content="{DynamicResource UpdateButton}" HorizontalAlignment="Left" Margin="465,348,0,0" VerticalAlignment="Top" Width="132" Height="66" Click="UpdateButton_Click" Grid.Column="1"/>
        <Label Content="{DynamicResource SortButton2}" HorizontalAlignment="Left" Margin="798,68,0,0" VerticalAlignment="Top" Grid.Column="1" Width="120"/>
        <Button x:Name="SearchButton2" Content="{DynamicResource SearchButton2}" HorizontalAlignment="Left" Margin="721,319,0,0" VerticalAlignment="Top" Height="49" Width="104" Grid.Column="1" Click="SearchButton2_Click"/>
        <TextBox x:Name="SearchText3" HorizontalAlignment="Left" Margin="713,282,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="{DynamicResource PartText}" HorizontalAlignment="Left" Margin="701,251,0,0" VerticalAlignment="Top" Width="157" Grid.Column="1"/>
    </Grid>
</Window>
