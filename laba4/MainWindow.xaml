<Window x:Class="laba4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="282,82,0,0" VerticalAlignment="Top" Height="66" Width="118" Click="Button_Click"/>
        <DataGrid x:Name="MainGrid" AutoGenerateColumns="True" ItemsSource="{DynamicResource ResourceKey=goods}" HorizontalAlignment="Left" Height="261" Margin="36,18,0,0" VerticalAlignment="Top" Width="231" MouseDoubleClick="MainGrid_MouseDoubleClick"/>
        <TextBox x:Name="SearchText" HorizontalAlignment="Left" Margin="45,301,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="99,334,0,0" VerticalAlignment="Top" Height="49" Width="105" Click="SearchButton_Click"/>
        <Button x:Name="ChangeButton" Content="Button" HorizontalAlignment="Left" Margin="311,180,0,0" VerticalAlignment="Top" Height="37" Width="60" Click="ChangeButton_Click"/>
        <TextBox x:Name="SearchText2" HorizontalAlignment="Left" Margin="203,301,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120"/>
        <Button Content="Соритровка" HorizontalAlignment="Left" Margin="564,139,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.265,0.259" Click="Button_Click_1" Width="146"/>
        <ComboBox x:Name="FilterBOx" HorizontalAlignment="Left" Margin="577,82,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddButton" Content="Button" HorizontalAlignment="Left" Margin="608,361,0,0" VerticalAlignment="Top" Height="34" Width="89" Click="Button_Click_2"/>
    </Grid>
</Window>
