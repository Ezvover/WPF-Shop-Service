<Window x:Class="laba4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="GridStyle" Background="ForestGreen" >
        <Button x:Name="DeleteButton"  Content="{DynamicResource DeleteButton}" HorizontalAlignment="Left" Margin="288,134,0,0" VerticalAlignment="Top" Height="68" Width="132" Click="Button_Click"/>
        <DataGrid x:Name="MainGrid" AutoGenerateColumns="True" ItemsSource="{DynamicResource ResourceKey=goods}" HorizontalAlignment="Left" Height="398" Margin="36,0,0,0" VerticalAlignment="Center" Width="231" MouseDoubleClick="MainGrid_MouseDoubleClick"/>
        <TextBox x:Name="SearchText" HorizontalAlignment="Left" Margin="592,243,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SearchButton" Content="{DynamicResource SearchButton}" HorizontalAlignment="Left" Margin="600,334,0,0" VerticalAlignment="Top" Height="49" Width="104" Click="SearchButton_Click"/>
        <TextBox x:Name="SearchText2" HorizontalAlignment="Left" Margin="592,297,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="{DynamicResource SortButton}" HorizontalAlignment="Left" Margin="590,144,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.265,0.259" Click="Button_Click_1" Width="125" Height="48"/>
        <ComboBox x:Name="FilterBOx" HorizontalAlignment="Left" Margin="592,82,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddButton" Content="{DynamicResource AddButton}" HorizontalAlignment="Left" Margin="288,45,0,0" VerticalAlignment="Top" Height="65" Width="132" Click="Button_Click_2"/>
        <Label Content="{DynamicResource StartPrice}" HorizontalAlignment="Left" Margin="603,212,0,0" VerticalAlignment="Top"/>
        <Label Content="{DynamicResource EndPrice}" HorizontalAlignment="Left" Margin="602,266,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="SaveButton" Content="{DynamicResource SaveButton}" HorizontalAlignment="Left" Margin="288,223,0,0" VerticalAlignment="Top" Width="132" Height="66" Click="SaveButton_Click"/>
        <Button x:Name="UpdateButton" Content="{DynamicResource UpdateButton}" HorizontalAlignment="Left" Margin="288,306,0,0" VerticalAlignment="Top" Width="132" Height="66" Click="UpdateButton_Click"/>
    </Grid>
</Window>
